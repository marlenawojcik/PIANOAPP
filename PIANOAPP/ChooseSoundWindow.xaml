<Window x:Class="PIANOAPP.ChooseSoundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIANOAPP"
        mc:Ignorable="d"
        Title="Wybierz Instrument" Height="450" Width="400" Background="#FFF5F5F5">
    <Window.Resources>
        <!-- Uniwersalny styl dla przycisków -->
        <Style x:Key="UnifiedButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FF414141"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF242225"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF807C7C" />


                    <Setter Property="Opacity" Value="0.6" />


                    <Setter Property="Foreground" Value="Black" />

                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#FFDDBEDA">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <!-- Przyciski ze spójnym stylem -->
        <Button Grid.Row="0" 
                Content="Piano" 
                Style="{StaticResource UnifiedButtonStyle}" 
                Click="PianoButton_Click" />
        <Button Grid.Row="1" 
                Content="Violin" 
                Style="{StaticResource UnifiedButtonStyle}" 
                Click="ViolinButton_Click" Background="#FF414141"/>
        <Button Grid.Row="2" 
                Content="Organ" 
                Style="{StaticResource UnifiedButtonStyle}" 
                Click="OrganButton_Click" />
    </Grid>
</Window>