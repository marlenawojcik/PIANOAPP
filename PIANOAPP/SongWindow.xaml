<Window x:Class="PIANOAPP.SongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIANOAPP"
        mc:Ignorable="d"
        Title="Song Selector" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#2E3A46">
    <Window.Resources>
        <!-- Styl dla zaokrąglonych przycisków -->
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Główne tło -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1A2634" Offset="0.249" />
                <GradientStop Color="#FF605C6B" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Nagłówek -->
        <TextBlock Text="Select a Song" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="30" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   Margin="0,20,0,0" FontFamily="Bodoni MT Black" />

        <!-- Panel dla listy utworów -->
        <Border Background="#FF0C151E" CornerRadius="15" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <StackPanel Name="SongListPanel" Orientation="Vertical" Margin="20">
                <!-- Tytuł sekcji -->
                <TextBlock Text="Available Songs" 
                           FontSize="27" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10" FontFamily="Bodoni MT Black" />
                <!-- Przyciski wypełniane dynamicznie w C# -->
            </StackPanel>
        </Border>
    </Grid>
</Window>