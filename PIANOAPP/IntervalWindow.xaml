 <Window x:Class="PIANOAPP.IntervalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIANOAPP"
        mc:Ignorable="d"
        Title="Interval Trainer" Height="750" Width="750" Background="#E9ECEF"><!-- Globalne zasoby stylów -->
<Window.Resources>
    <!-- Styl przycisku -->
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="#424242" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Width" Value="250" />
        <Setter Property="Height" Value="50" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="Bodoni MT" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Template">

            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#616161" />
                            <Setter Property="Foreground" Value="#E0E0E0" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#757575" />
                            <Setter Property="Foreground" Value="#FFFFFF" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Styl dla przycisków interwałów -->
    <Style x:Key="IntervalButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="#424242" />
        <Setter Property="BorderBrush" Value="DarkGray" />
        
        <Setter Property="FontFamily" Value="Bodoni MT" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Width" Value="180" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#616161" />
                <Setter Property="Foreground" Value="#E0E0E0" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#757575" />
                <Setter Property="Foreground" Value="#FFFFFF" />
            </Trigger>
        </Style.Triggers>
    </Style>
</Window.Resources>

<Grid Margin="0,0,0,9">
    <Grid.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF5F4C57"/>
            <GradientStop Color="#FFFFD3EE" Offset="1"/>
        </LinearGradientBrush>
    </Grid.Background>
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- Panel dla głównych przycisków -->
    <StackPanel x:Name="mainGrid" HorizontalAlignment="Left" Width="300" VerticalAlignment="Top" Height="750" Grid.RowSpan="2" Margin="10,10,0,0" Grid.ColumnSpan="2">

      


    </StackPanel>

    <!-- Przyciski interwałów -->
    <StackPanel HorizontalAlignment="Left" Grid.Column="1" VerticalAlignment="Top" Margin="50,55,0,0" Grid.RowSpan="2">
        <Button Content="1 - Perfect Unison" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}"  FontSize="20" />
        <Button Content="2> - Minor Second" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="2 - Major Second" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="3> - Minor Third" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="3 - Major Third" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="4 - Perfect Fourth" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="4&lt; / 5> - Tritone" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
    </StackPanel>

    <!-- Więcej przycisków interwałów -->
    <StackPanel HorizontalAlignment="Center" Grid.Column="2" VerticalAlignment="Top" Margin="0,93,0,0" Grid.RowSpan="2" Height="438" Width="288">
        <Button Content="5 - Perfect Fifth" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="6> - Minor Sixth" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="6 - Major Sixth" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="7 - Minor Seventh" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="7&lt; - Major Seventh" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
        <Button Content="8 - Perfect Octave" Click="OnIntervalButtonClick" Style="{StaticResource IntervalButtonStyle}" />
    </StackPanel>
</Grid>
</Window>

