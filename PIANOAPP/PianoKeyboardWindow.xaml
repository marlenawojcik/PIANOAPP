<Window x:Class="PIANOAPP.PianoKeyboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIANOAPP"
        mc:Ignorable="d"
        Title="PianoKeyboardWindow" Height="650" Width="800"
    WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Definiowanie wspólnego stylu dla przycisków -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FF722840"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#FF722840"/>
            <Setter Property="BorderThickness" Value="2"/>
            
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <!-- Efekt po najechaniu -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="BorderBrush" Value="#FF722840"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <!-- Przyciski sterujące -->
            <RowDefinition Height="Auto" />
            <!-- Pięciolinia -->
            <RowDefinition Height="400" />
            <!-- Klawiatura -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        

        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#FFF8DAE4" Height="50" VerticalAlignment="Center">
            <!-- Użycie wspólnego stylu dla obu przycisków -->
            <Canvas x:Name="ButtonCanvas" Background="White">
                <Button Content="Record" Click="OnRecordButtonClick" Style="{StaticResource ButtonStyle}" Margin="10" />
                <Button Content="Sound" Click="OnSoundButtonClick" Style="{StaticResource ButtonStyle}" Margin="10" Canvas.Left="125" />
            </Canvas>
        </StackPanel>
        <!-- Pięciolinia -->
        <ScrollViewer Grid.Row="1" Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            
                <Canvas x:Name="staffCanvas" Background="White" >
                <!-- Elementy pięciolinii -->
                
            </Canvas>
            
        </ScrollViewer>
        <!-- Klawiatura -->
        <ScrollViewer Grid.Row="2" Grid.Column="0" HorizontalScrollBarVisibility="Auto" Name="scroll" VerticalScrollBarVisibility="Disabled">
            
                <!-- Elementy pięciolinii -->

            
            <StackPanel x:Name="KeyboardPanel" Orientation="Horizontal" Background="#FFF8DAE4" Margin="0" >
                    <!-- Elementy klawiatury są dodawane dynamicznie -->
                </StackPanel>
            

        </ScrollViewer>
    </Grid>
</Window>
