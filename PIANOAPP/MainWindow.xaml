<Window x:Class="PIANOAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIANOAPP"
        mc:Ignorable="d"
        Title="Main Menu" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#2E3A46">

    <Window.Resources>
        <!-- Styl dla zaokrąglonych przycisków -->
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Cała powierzchnia przycisku -->
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="2"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="30" />
            <!-- Zwiększony rozmiar tekstu -->
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Bodoni MT Black" />
            <Setter Property="Margin" Value="0,6,10,30" />

            <!-- Domyślne tło -->
            <Setter Property="BorderBrush" Value="#FF8176CB" />
            <!-- Domyślne obramowanie -->

            <!-- Efekt najechania kursorem dla wszystkich przycisków -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D3D3D3" />
                    <!-- Jasnoszary kolor -->
                    <Setter Property="Foreground" Value="Pink" />
                    <Setter Property="BorderBrush" Value="DarkGray" />
                    <Setter Property="Opacity" Value="0.4" />
                    <Setter Property="Foreground" Value="Pink" />

                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>

        <!-- Główne tło -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF3C444C" Offset="1" />
                <GradientStop Color="Black" Offset="0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Nagłówek -->
        <TextBlock Text="Main Menu" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="42" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   Margin="0,20,0,0" FontFamily="Bodoni MT Black" />

        <!-- Siatka przycisków -->
        <Grid Margin="0,70,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Przyciski -->
            <Button Grid.Column="0" Content="Keyboard" Style="{StaticResource RoundedButtonStyle}" Click="OnKeyboardButtonClick" >
                <Button.Background>
                    <ImageBrush ImageSource="/Images/keyboard.jpg" Stretch="UniformToFill" Opacity="0.4" />
                    <!-- Obraz jako tło -->
                </Button.Background>
            </Button>
            <Button Grid.Column="1" Content="Play Songs" Style="{StaticResource RoundedButtonStyle}" Background="#FF393948" BorderBrush="#FF1F1F37" Click="OnPlayButtonClick"   />
            <Button Grid.Column="2" Content="My Melodies" Style="{StaticResource RoundedButtonStyle}"  BorderBrush="#FF393948" Click="OnMyMelodiesButtonClick"    >
                <Button.Background>
                    <ImageBrush ImageSource="Images/nuts.jpg" Stretch="UniformToFill" Opacity="0.4" />
                    <!-- Obraz jako tło -->
                </Button.Background>
            </Button>
            <Button Grid.Column="3" Content="Intervals" Style="{StaticResource RoundedButtonStyle}" Background="#FF53547C"  Click="OnIntervalButtonClick" Margin="0,6,10,30" />
        </Grid>
    </Grid>
</Window>
  