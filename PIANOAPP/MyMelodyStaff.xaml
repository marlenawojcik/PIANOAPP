<Window x:Class="PIANOAPP.MyMelodyStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIANOAPP"
        mc:Ignorable="d"
        Title="MyMelodyStaff" Height="450" Width="800">

    <Window.Resources>
        <!-- Definiowanie wspólnego stylu dla przycisków -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FF722840"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#FF722840"/>
            <Setter Property="BorderThickness" Value="2"/>

            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <!-- Efekt po najechaniu -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="BorderBrush" Value="#FF722840"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#FFEDE4EC">
        <Grid.RowDefinitions>
            <!-- Przyciski sterujące -->

            <!-- Klawiatura -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />


        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Play" Click="OnPlayButtonClick" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Save" Click="SaveButtonClick" Style="{StaticResource ButtonStyle}" Margin="10" Canvas.Left="125" />
        </StackPanel>
        <!-- Pięciolinia -->
        <ScrollViewer Grid.Row="1" Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,20,0,0">

            <Canvas x:Name="staffCanvas" Background="White" Width="1000" Height="300" >
                <!-- Elementy pięciolinii -->

            </Canvas>

        </ScrollViewer>

    </Grid>
</Window>
